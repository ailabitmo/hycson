<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rootView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/drawerHeaderColor"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/vkLogoView"
        android:layout_width="@dimen/drawer_header_standard_icon_size"
        android:layout_height="@dimen/drawer_header_standard_icon_size"
        android:layout_alignEnd="@+id/greetingView"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_header_vk_circle"/>

    <ImageView
        android:id="@+id/twitterLogoView"
        android:layout_width="@dimen/drawer_header_selected_icon_size"
        android:layout_height="@dimen/drawer_header_selected_icon_size"
        android:layout_alignStart="@+id/greetingView"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_header_twitter_circle"/>

    <TextView
        android:id="@+id/greetingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="@string/drawer_header_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

</RelativeLayout>